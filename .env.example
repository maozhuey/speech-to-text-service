# 服务配置
HOST=0.0.0.0
PORT=8000
MAX_CONNECTIONS=2

# CORS安全配置（逗号分隔允许的域名）
# 开发环境示例：
ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080
# 生产环境示例（请根据实际域名修改）：
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# CORS安全配置 - 允许的HTTP方法（逗号分隔）
ALLOWED_METHODS=GET,POST,OPTIONS

# CORS安全配置 - 允许的请求头（逗号分隔）
ALLOWED_HEADERS=Content-Type,Authorization

# FunASR模型配置
MODEL_PATH=./models/speech_paraformer-large_asr_nat-zh-cn-16k-common-vocab8404-pytorch
VAD_MODEL_PATH=./models/speech_fsmn_vad_zh-cn-16k-common-pytorch
PUNC_MODEL_PATH=./models/punc_ct-transformer_zh-cn-common-vocab272727-pytorch

# 音频配置
SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024
MAX_AUDIO_LENGTH=30

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# 开发模式
DEBUG=false

# VAD智能断句配置
VAD_SILENCE_THRESHOLD_MS=800
VAD_MAX_SEGMENT_DURATION_MS=20000
VAD_ENABLED=true