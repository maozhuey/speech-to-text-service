# 语音转文本服务配置示例
# 复制此文件为 .env 并根据需要修改配置

# 开发测试模式 - 使用模拟识别结果（设为false可启用真实识别）
SIMULATION_MODE=false

# 服务配置
MAX_CONNECTIONS=5
SAMPLE_RATE=16000
CHUNK_SIZE=1024
LOG_LEVEL=INFO

# 多模型配置
DEFAULT_MODEL=offline
MAX_CACHED_MODELS=2
ENABLE_MODEL_SWITCHING=true

# 离线模型配置（ASR + VAD + 标点）
# 路径相对于 backend 目录
MODEL_PATH=../models/damo/speech_paraformer-large_asr_nat-zh-cn-16k-common-vocab8404-pytorch
VAD_MODEL_PATH=../models/damo/speech_fsmn_vad_zh-cn-16k-common-pytorch
PUNC_MODEL_PATH=../models/damo/punc_ct-transformer_zh-cn-common-vocab272727-pytorch

# 流式模型配置（仅ASR，低延迟）
# 需要先下载流式模型到 models/paraformer-zh-streaming/ 目录
# 下载命令: funasr +model=paraformer-zh-streaming
# 或使用 Python API:
#   from modelscope import snapshot_download
#   snapshot_download('iic/speech_paraformer-large_asr_nat-zh-cn-16k-common-vocab8404-online', cache_dir='./models/paraformer-zh-streaming')
STREAMING_MODEL_PATH=../models/paraformer-zh-streaming/iic/speech_paraformer-large_asr_nat-zh-cn-16k-common-vocab8404-online
